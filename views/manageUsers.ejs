<!DOCTYPE html>
<html>

	<head>
    <title>Add Job</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="javascripts/manageUsers.js"></script>
	</head>

	<body style="padding: 0px;">

		<% include partials/header %>

    <div class="jumbotron" style="background-color: #94B77C; top: 50px;">
    	<div class="container">
	    	<h1>Manage Users</h1>
	    	<p>Monitor user activity</p>
	    </div>
    </div>

	<div class="navbar navbar-default">
	  <div class="container">
	    <div class="collapse navbar-collapse">
	      <ul class="nav navbar-nav">
	      	<li><a href="">Find Students</a></li>
	      	<li><a href="">Find Faculty</a></li>
	      	<li><a href="">Find Employers</a></li>
	      </ul>
	    </div>
	  </div>
	</div>

    <div class="col-md-4 posting-container">
    	<hr>
    	<% allUsers.forEach(function(user){ %>
    		<div class="user">
    			<h4><p>Username: <%= user.username %></p></h4>
    			<p>Account type: <%= user.accountType %></p>
    			<p>Date created: <%= user.dateCreated %></p>
    			<p>School: <%= user.school %></p>
    			<p>Company: <%= user.company %></p>
    		</div>
    		<hr>
    	<% }); %>

    </div>

    <div class="col-md-5 posting-detail-container">
    	<p id="defaultDetail">Select a user</p>
    	<h3><p id="usernameDetail" hidden></p></h3>
    	<p id="accountTypeDetail" hidden></p>
    	<p id="dateCreatedDetail" hidden></p>
    	<hr>
    	<p id="studentIdDetail" hidden></p>
    	<hr>
    	<p id="schoolDetail" hidden></p>
    	<p id="companyDetail" hidden></p>
    	<p id="jobsAppliedDetail" hidden></p>
    	<p id="jobsInProgressDetail" hidden></p>
    	<p id="jobsCompletedDetail" hidden></p>
    	<hr>
    	<a id="messageUser" class="btn btn-lg btn-success pull-right" role="button">Message</a>
    	<a id="deleteUser" class="btn btn-lg pull-left" role="button">Delete</a>
    </div>

  </body>

  <script type="text/javascript">

    <% if(allUsers != undefined){ %>
	    <% allUsers.forEach(function(user){ %>
	    	var user = {
	    		id: "<%- user._id %>",
	    		username: "<%- user.username %>",
	    		accountType: "<%- user.accountType %>",
	    		dateCreated: "<%- user.dateCreated %>",
	    		school: "<%- user.school %>",
	    		studentId: "<%- user.studentId %>",
	    		faculty: "<%- user.faculty %>",
	    		company: "<%- user.company %>",
	    		jobsApplied: JSON.parse('<%- JSON.stringify(user.jobsApplied) %>'),
	    		jobsInProgress: JSON.parse('<%- JSON.stringify(user.jobsInProgress) %>'),
	    		jobsCompleted: JSON.parse('<%- JSON.stringify(user.jobsCompleted) %>')
	    	};
	    	manageUsers.addUser(user);
	    <% }); %>
    <% } %>

    manageUsers.init();

  </script>
</html>