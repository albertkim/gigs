<!DOCTYPE html>
<html>

	<head>
    <title>Add Job</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="javascripts/index.js"></script>
	</head>

	<body style="padding: 0px;">

		<div class="navbar navbar-fixed-top">
      <div class="container-fluid">
	      <div class-"navbar-header">
	      	<a class="navbar-brand" href="../">Gigs</a>
	      </div>
	      <div class="collapse navbar-collapse">
		      <ul class="nav navbar-nav">
		      	<li class="active"><a href="/addJob">Add a Job</a></li>
		      	<li class="active"><a href="">FAQ</a></li>
		      </ul>
		      <form class="navbar-form navbar-left" role="search">
		      	<div class="form-group">
		      		<input id="searchInput" type="text" class="form-control" placeholder="Search">
		      	</div>
		      	<button type="submit" class="btn btn-default">Submit</button>
		      </form>
		      <form class="navbar-form navbar-right">
		      	<div class="form-group">
		      		<input id="usernameInput" type="text" class="form-control" placeholder="Username">
		      	</div>
		      	<div class="form-group">
		      		<input id="passwordInput" type="text" class="form-control" placeholder="Password">
		      	</div>
		      	<button id="loginButton" type="submit" class="btn btn-default">Login</button>
		      	<a id="registerButton" type="submit" class="btn btn-default" href="/register">Register</a>
		      </form>
	      </div>
      </div>
    </div>

    <div class="jumbotron" style="background-color: #94B77C">
    	<div class="container">
	    	<h1>Find local jobs</h1>
	    	<p>Contribute to your community</p>
	    	<p>User our quick and easy payment system, powered by Stripe</p>
	    </div>
    </div>

    <div class="col-md-4 posting-container">
    	{{#allJobs}}
    		<div class="job">
    			<h4><p>{{title}}</p></h4>
    			<p>${{salary}} {{salaryType}}</p>
    			<p>{{location}}</p>
    		</div>
    	{{/allJobs}}
    </div>

    <div class="col-md-5 posting-detail-container">
    	<p id="defaultDetail">Select a job</p>
    	<h3><p id="titleDetail" hidden></p></h3>
    	<p id="salaryDetail" hidden></p>
    	<p id="locationDetail" hidden></p>
    	<hr>
    	<p id="descriptionDetail" style="text-align: left" hidden></p>
    	<hr>
    	<a id="messageJob" class="btn btn-lg btn-success pull-right" role="button">Message</a>
    	<a id="applyJob" class="btn btn-lg btn-success pull-right" role="button">Apply</a>
    	<a id="deleteJob" class="btn btn-lg pull-left" role="button">Delete</a>
    </div>

  </body>

  <script type="text/javascript">
    index.init({});
    {{#allJobs}}
    	var data = {
    		id: "{{_id}}",
    		title: "{{title}}",
    		salary: "{{salary}}",
    		salaryType: "{{salaryType}}",
    		location: "{{location}}",
    		description: "{{description}}"
    	}
    	index.addJob(data);
    {{/allJobs}}
  </script>
</html>